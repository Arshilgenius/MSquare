<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"

    tools:context="com.arshilgenius.msquare.MainActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/order"
        android:textSize="25sp"
        android:textStyle="normal"
        android:background="#FF9800"
        android:text="ORDER MEDICINE"
        android:textColor="@android:color/white"
        android:onClick="order" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <Button
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Virtualbp"
        android:onClick="virtualbp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:background="#FF9800"
        android:text="Virtual BP"
        android:textColor="@android:color/white"
        android:layout_below="@id/order"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/BMI"
        android:onClick="BMI"
        android:textStyle="normal"
        android:background="#FF9800"
        android:textSize="25sp"
        android:text="BMI"
        android:textColor="@android:color/white"
        android:layout_below="@id/order"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/depression"
        android:layout_alignParentLeft="true"
        android:onClick="depression"
        android:textStyle="normal"
        android:background="#FF9800"
        android:textSize="22sp"
        android:text="FIRST AID"
        android:textColor="@android:color/white"
        android:layout_below="@id/Virtualbp"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:onClick="aboutus"
        android:id="@+id/AboutUs"
        android:layout_alignParentRight="true"
        android:textStyle="normal"
        android:background="#FF9800"
        android:textSize="22sp"
        android:text="About US"
        android:textColor="@android:color/white"
        android:layout_below="@id/BMI"/>

</RelativeLayout>






