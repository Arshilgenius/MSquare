<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arshilgenius.msquare.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/arshil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/order"
        android:onClick="order"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Virtualbp"
        android:onClick="virtualbp"
        android:src="@drawable/arshil"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/order"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/arshil"
        android:layout_alignParentRight="true"
        android:id="@+id/BMI"
        android:onClick="BMI"
        android:scaleType="centerCrop"
        android:layout_below="@id/order"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:id="@+id/depression"
        android:src="@drawable/arshil"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:onClick="depression"
        android:layout_below="@id/Virtualbp"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/arshil"
        android:onClick="aboutus"
        android:id="@+id/AboutUs"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/BMI"/>


</RelativeLayout>






